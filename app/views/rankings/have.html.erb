<h2 class="ranking-title">\Have Ranking/</h2>
<div class="container">
  <div class="container-inner inner-default clearfix">
    <% @items.each.with_index(1) do |item, i| %>
      <div class="item-box">
        <div>
         <%= "No.#{i}" %>
        </div>
        <div class="image">
          <div class="img-wrap">
            <%= image_tag(item.medium_image , alt: item.title) %><br>
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <% #TODO 商品タイトル %>
            <%= link_to item.title, item.detail_page_url %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
